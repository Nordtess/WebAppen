@section Styles {
    <link rel="stylesheet" href="~/css/pages/mycv.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Mitt CV";
}

<div class="cv-page">

    <!-- BANNER (samma känsla som Home) -->
    <div class="cv-banner" aria-label="CV-banner">
        <img src="~/images/bannersandicons/mycv3.png"
             alt="Banner"
             class="cv-banner-img" />
    </div>

    <!-- CV LAYOUT CARD -->
    <div class="cv-card">

        <!-- TOP BAR (toggle ska aldrig ligga ovanpå innehåll) -->
        <div class="cv-topbar">
            <div class="privacy-toggle" data-privacy-toggle>
                <span class="privacy-label">Privat läge</span>

                <!-- Apple-ish switch (startar ON just nu tills ni kopplar SQL) -->
                <button class="privacy-switch is-on"
                        type="button"
                        aria-label="Växla privat läge"
                        aria-pressed="true">
                    <span class="privacy-switch-track" aria-hidden="true">
                        <span class="privacy-switch-state privacy-switch-state--off">Av</span>
                        <span class="privacy-switch-thumb"></span>
                        <span class="privacy-switch-state privacy-switch-state--on">På</span>
                    </span>
                </button>
            </div>
        </div>

        <div class="cv-divider"></div>

        <!-- CONTENT (har vänster “rail” bakgrund) -->
        <div class="cv-content">
            <div class="cv-grid">

                <!-- LEFT -->
                <aside class="cv-left">

                    <!-- Profilkort -->
                    <div class="cv-panel-card cv-profile-card">
                        <div class="cv-avatar" aria-label="Profilbild">
                            <img class="cv-avatar-img" src="~/images/profiles/jamie.png" alt="Profilbild" />
                        </div>

                        <div class="cv-hero-text">
                            <div class="cv-name">Jamie Larsson</div>
                            <div class="cv-role">Systemvetenskap • Fullstack</div>
                        </div>
                    </div>

                    <!-- Kontakt -->
                    <section class="cv-box cv-panel-card">
                        <h3 class="cv-box-title">Kontakt</h3>

                        <div class="cv-contact-list">
                            <div class="cv-contact-row">
                                <span class="cv-contact-ico">✉️</span>
                                <div class="cv-contact-meta">
                                    <div class="cv-contact-k">Email</div>
                                    <div class="cv-contact-v">jamie@example.se</div>
                                </div>
                            </div>

                            <div class="cv-contact-row">
                                <span class="cv-contact-ico">📍</span>
                                <div class="cv-contact-meta">
                                    <div class="cv-contact-k">Plats</div>
                                    <div class="cv-contact-v">Örebro, Sverige</div>
                                </div>
                            </div>

                            <div class="cv-contact-row">
                                <span class="cv-contact-ico">📞</span>
                                <div class="cv-contact-meta">
                                    <div class="cv-contact-k">Telefon</div>
                                    <div class="cv-contact-v">+46 70 123 45 67</div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Kompetenser -->
                    <section class="cv-box cv-panel-card">
                        <h3 class="cv-box-title">Kompetenser</h3>

                        <div class="cv-chips">
                            <span class="cv-chip">ASP.NET</span>
                            <span class="cv-chip">MVC</span>
                            <span class="cv-chip">C#</span>
                            <span class="cv-chip">SQL</span>
                            <span class="cv-chip">Fullstack</span>
                            <span class="cv-chip">Git</span>
                        </div>
                    </section>

                </aside>

                <!-- RIGHT -->
                <main class="cv-right">

                    <section class="cv-box">
                        <h3 class="cv-box-title">Profil</h3>
                        <p class="cv-paragraph">
                            Placeholder-text: Kort sammanfattning av vem man är, vad man söker och vad man är bra på.
                        </p>
                    </section>

                    <section class="cv-box">
                        <h3 class="cv-box-title">Utbildningar</h3>

                        <div class="cv-item">
                            <div class="cv-item-title">Örebro universitet — Systemvetenskap</div>
                            <div class="cv-item-sub">2024 – Pågående • Inriktning: Webbutveckling</div>
                        </div>

                        <div class="cv-item cv-item-muted">
                            <div class="cv-item-title">Kurs / Certifiering</div>
                            <div class="cv-item-sub">År • Kort beskrivning</div>
                        </div>
                    </section>

                    <section class="cv-box">
                        <h3 class="cv-box-title">Tidigare erfarenhet</h3>

                        <div class="cv-item">
                            <div class="cv-item-title">ICA — Kassör</div>
                            <div class="cv-item-sub">2021 – 2023 • Kundservice, tempo, ansvar</div>
                        </div>

                        <div class="cv-item">
                            <div class="cv-item-title">Lagerarbete</div>
                            <div class="cv-item-sub">2019 – 2021 • Logistik, plock, struktur</div>
                        </div>
                    </section>

                    <section class="cv-box">
                        <h3 class="cv-box-title">Projekt</h3>
                        <p class="cv-paragraph cv-paragraph-muted">
                            Placeholder: här listas projekt som användaren valt att visa (även projekt man inte skapat själv).
                        </p>

                        <div class="cv-projects">
                            <div class="cv-project">
                                <div class="cv-project-title">NotLinkedIn — WebApp</div>
                                <div class="cv-project-desc">CV-sidor, auth-flöden och UI i Apple-ish stil.</div>
                                <div class="cv-chips cv-chips-sm">
                                    <span class="cv-chip">ASP.NET</span>
                                    <span class="cv-chip">MVC</span>
                                    <span class="cv-chip">SQL</span>
                                </div>
                            </div>

                            <div class="cv-project">
                                <div class="cv-project-title">Projekt: AES GUI</div>
                                <div class="cv-project-desc">Implementerade AES-kryptering i ett GUI.</div>
                                <div class="cv-chips cv-chips-sm">
                                    <span class="cv-chip">C#</span>
                                    <span class="cv-chip">Security</span>
                                    <span class="cv-chip">GUI</span>
                                </div>
                            </div>

                            <div class="cv-project">
                                <div class="cv-project-title">Projekt: Linux & Nätverk</div>
                                <div class="cv-project-desc">Rapport: Wireshark och IPv6.</div>
                                <div class="cv-chips cv-chips-sm">
                                    <span class="cv-chip">Linux</span>
                                    <span class="cv-chip">IPv6</span>
                                    <span class="cv-chip">Wireshark</span>
                                </div>
                            </div>

                            <div class="cv-project">
                                <div class="cv-project-title">Projekt</div>
                                <div class="cv-project-desc">Kort beskrivning av projektets syfte och din roll.</div>
                                <div class="cv-chips cv-chips-sm">
                                    <span class="cv-chip">Tag</span>
                                    <span class="cv-chip">Tag</span>
                                </div>
                            </div>
                        </div>
                    </section>

                </main>
            </div>
        </div>
    </div>

    <!-- EDIT BUTTON -->
    <div class="cv-edit-button-container">
        <a href="@Url.Action("Index", "EditCV")" class="btn-primary-custom">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" />
            </svg>
            Redigera CV
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/mycv.js" asp-append-version="true"></script>
}
