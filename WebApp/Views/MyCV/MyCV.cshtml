@{
    ViewData["Title"] = "Mitt CV";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/mycv.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
}

<div class="cv-page">

    <!-- BANNER -->
    <div class="cv-banner" aria-label="CV-banner">
        <img src="~/images/bannersandicons/mycv3.png"
             alt="Banner"
             class="cv-banner-img" />
    </div>

    <!-- CV "SIDA" / KORT -->
    <div class="cv-card">

        <!-- TOP BAR: Besök + Toggle -->
        <div class="cv-topbar">
            <div class="cv-visits" aria-label="Antal besök">
                <span class="cv-visits-label">Antal besök:</span>
                <span class="cv-visits-value">10</span>
            </div>

            <!-- Toggle (placeholder tills SQL-koppling) -->
            <div class="cv-privacy">
                <span class="cv-privacy-label">Privat läge</span>

                <button class="cv-toggle is-on"
                        type="button"
                        role="switch"
                        aria-checked="true"
                        aria-label="Växla privat läge">
                    <span class="cv-toggle-track">
                        <span class="cv-toggle-text cv-toggle-text--off">Av</span>
                        <span class="cv-toggle-text cv-toggle-text--on">På</span>
                        <span class="cv-toggle-knob" aria-hidden="true"></span>
                    </span>
                </button>
            </div>
        </div>

        <div class="cv-divider"></div>

        <div class="cv-grid">

            <!-- LEFT PANEL -->
            <aside class="cv-left">

                <!-- Profile card -->
                <div class="cv-profile-card">

                    <div class="cv-avatar" aria-label="Profilbild">
                        <!-- ✅ BYT TILL RIKTIG BILD:
                             1) Lägg en bild i t.ex. wwwroot/images/profiles/jamie.jpg
                             2) Avkommentera <img> nedan
                             3) Kommentera/ta bort placeholder-diven
                        -->
                        @* <img class="cv-avatar-img" src="~/images/profiles/jamie.jpg" alt="Profilbild" /> *@
                        <div class="cv-avatar-placeholder">JL</div>
                    </div>

                    <div class="cv-profile-name">Jamie Larsson</div>
                    <div class="cv-profile-role">Systemvetenskap • Fullstack</div>
                </div>

                <!-- Contact -->
                <section class="cv-box cv-box--left">
                    <h3 class="cv-box-title">Kontakt</h3>

                    <div class="cv-contact-list">
                        <div class="cv-contact-row">
                            <div class="cv-contact-ico" aria-hidden="true">✉</div>
                            <div class="cv-contact-text">
                                <div class="cv-contact-k">Email</div>
                                <div class="cv-contact-v">jamie@example.se</div>
                            </div>
                        </div>

                        <div class="cv-contact-row">
                            <div class="cv-contact-ico" aria-hidden="true">📍</div>
                            <div class="cv-contact-text">
                                <div class="cv-contact-k">Plats</div>
                                <div class="cv-contact-v">Örebro, Sverige</div>
                            </div>
                        </div>

                        <div class="cv-contact-row">
                            <div class="cv-contact-ico" aria-hidden="true">☎</div>
                            <div class="cv-contact-text">
                                <div class="cv-contact-k">Telefon</div>
                                <div class="cv-contact-v">+46 70 123 45 67</div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Kompetenser -->
                <section class="cv-box cv-box--left">
                    <h3 class="cv-box-title">Kompetenser</h3>

                    <div class="cv-chips cv-chips--uniform" aria-label="Kompetenser">
                        <span class="cv-chip">ASP.NET</span>
                        <span class="cv-chip">MVC</span>
                        <span class="cv-chip">C#</span>
                        <span class="cv-chip">SQL</span>
                        <span class="cv-chip">Fullstack</span>
                        <span class="cv-chip">Git</span>
                    </div>
                </section>

            </aside>

            <!-- RIGHT CONTENT -->
            <main class="cv-right">

                <section class="cv-box">
                    <h3 class="cv-box-title">Profil</h3>
                    <p class="cv-paragraph">
                        Placeholder-text: Kort sammanfattning av vem man är, vad man söker och vad man är bra på.
                    </p>
                </section>

                <section class="cv-box">
                    <h3 class="cv-box-title">Utbildningar</h3>

                    <div class="cv-item">
                        <div class="cv-item-title">Örebro universitet — Systemvetenskap</div>
                        <div class="cv-item-sub">2024 – Pågående • Inriktning: Webbutveckling</div>
                    </div>

                    <div class="cv-item cv-item-muted">
                        <div class="cv-item-title">Kurs / Certifiering</div>
                        <div class="cv-item-sub">År • Kort beskrivning</div>
                    </div>
                </section>

                <section class="cv-box">
                    <h3 class="cv-box-title">Tidigare erfarenhet</h3>

                    <div class="cv-item">
                        <div class="cv-item-title">ICA — Kassör</div>
                        <div class="cv-item-sub">2021 – 2023 • Kundservice, tempo, ansvar</div>
                    </div>

                    <div class="cv-item">
                        <div class="cv-item-title">Lagerarbete</div>
                        <div class="cv-item-sub">2019 – 2021 • Logistik, plock, struktur</div>
                    </div>
                </section>

                <!-- PROJECTS (med ikoner under avskiljare) -->
                <section class="cv-box">
                    <h3 class="cv-box-title">Projekt</h3>
                    <p class="cv-paragraph cv-paragraph-muted cv-projects-intro">
                        Exempelprojekt (placeholder). Senare hämtas projekt + tech stack från SQL.
                    </p>

                    <div class="cv-projects">

                        <article class="cv-project">
                            <div class="cv-project-title">NotLinkedIn — WebApp</div>
                            <p class="cv-project-desc">
                                Webbaserad plattform där användare skapar CV-profiler, kopplar projekt och kan kommunicera via privata meddelanden.
                                Fokus på ren Apple-ish UI, tydlig struktur och snabb upplevelse.
                            </p>

                            <div class="cv-project-divider" aria-hidden="true"></div>

                            <div class="cv-techstack" aria-label="Tech stack">
                                <span class="cv-tech-tile"><img class="cv-tech-icon" src="~/images/svg/techstack/csharp.svg" alt="C#" /></span>
                                <span class="cv-tech-tile"><img class="cv-tech-icon" src="~/images/svg/techstack/mysql.svg" alt="MySQL" /></span>
                                <span class="cv-tech-tile"><img class="cv-tech-icon" src="~/images/svg/techstack/mongodb.svg" alt="MongoDB" /></span>
                            </div>
                        </article>

                        <article class="cv-project">
                            <div class="cv-project-title">AES GUI — Kryptering</div>
                            <p class="cv-project-desc">
                                GUI-app som krypterar/dekrypterar text och ger tydliga statusmeddelanden, validering och robust felhantering.
                            </p>

                            <div class="cv-project-divider" aria-hidden="true"></div>

                            <div class="cv-techstack" aria-label="Tech stack">
                                <span class="cv-tech-tile"><img class="cv-tech-icon" src="~/images/svg/techstack/csharp.svg" alt="C#" /></span>
                                <span class="cv-tech-tile"><img class="cv-tech-icon" src="~/images/svg/techstack/cplusplus.svg" alt="C++" /></span>
                            </div>
                        </article>

                        <article class="cv-project">
                            <div class="cv-project-title">Linux & Nätverk — IPv6 / Wireshark</div>
                            <p class="cv-project-desc">
                                Rapport + labb där trafik analyseras i hemmanätverk. Fokus på adressering, protokoll och verifiering av paketflöden.
                            </p>

                            <div class="cv-project-divider" aria-hidden="true"></div>

                            <div class="cv-techstack" aria-label="Tech stack">
                                <span class="cv-tech-tile"><img class="cv-tech-icon" src="~/images/svg/techstack/python.svg" alt="Python" /></span>
                                <span class="cv-tech-tile"><img class="cv-tech-icon" src="~/images/svg/techstack/java.svg" alt="Java" /></span>
                            </div>
                        </article>

                        <article class="cv-project">
                            <div class="cv-project-title">Mini Dashboard — Frontend/Logik</div>
                            <p class="cv-project-desc">
                                Liten demo för att visa struktur: komponenter, state och tydlig dataflödeslogik. Byggd för att vara enkel att vidareutveckla.
                            </p>

                            <div class="cv-project-divider" aria-hidden="true"></div>

                            <div class="cv-techstack" aria-label="Tech stack">
                                <span class="cv-tech-tile"><img class="cv-tech-icon" src="~/images/svg/techstack/javascript.svg" alt="JavaScript" /></span>
                                <span class="cv-tech-tile"><img class="cv-tech-icon" src="~/images/svg/techstack/python.svg" alt="Python" /></span>
                            </div>
                        </article>

                    </div>
                </section>

            </main>
        </div>
    </div>

    <!-- EDIT BUTTON -->
    <div class="cv-edit-button-container">
        <a href="@Url.Action("Index", "EditCV")" class="btn-primary-custom">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" />
            </svg>
            Redigera CV
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/mycv.js" asp-append-version="true"></script>
}
