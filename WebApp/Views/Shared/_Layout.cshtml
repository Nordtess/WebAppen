@{
    // PLACEHOLDERS
    var mockUserEmail = "jamie@example.se";
    var unreadCount = 3;
    var hasUnread = unreadCount > 0;

    // Active-markering (valfritt men nice)
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string Active(string controller) => currentController == controller ? " active" : "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">

    @RenderSection("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm nl-navbar">
            <div class="container-fluid nl-grid">

                <!-- VÄNSTER: LOGGA -->
                <div class="nl-left">
                    <a class="nl-brand" asp-controller="Home" asp-action="Index" aria-label="NotLinkedIn">
                        <span class="nl-logo-pill">NotLinkedIn</span>
                    </a>
                </div>

                <!-- MITTEN: (streck + länkar) -->
                <div class="collapse navbar-collapse justify-content-center" id="mainNav">
                    <ul class="navbar-nav nl-nav-center">
                        <li class="nav-item">
                            <a class="nav-link nl-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nl-link" asp-controller="Login" asp-action="Index">Logga in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nl-link" asp-controller="NewUser" asp-action="Index">Bli medlem</a>
                        </li>
                    </ul>

                <!-- HÖGER: (streck + user + burger + streck + mail) -->
                <div class="nl-right">
                    <span class="nl-vline" aria-hidden="true"></span>

                    <span class="nl-user">@mockUserEmail</span>

                    <button class="nl-menu-btn" type="button" aria-label="Öppna meny" aria-expanded="false">
                        <span class="nl-menu-lines" aria-hidden="true">
                            <span></span><span></span><span></span>
                        </span>
                    </button>

                    <div class="nl-menu-panel" aria-hidden="true">
                        <a class="nl-menu-item" asp-controller="MyCV" asp-action="Index">Mitt CV</a>
                        <a class="nl-menu-item" asp-controller="Messages" asp-action="Index">Mina meddelanden</a>
                    </div>

                    <span class="nl-vline" aria-hidden="true"></span>

                    <a class="nl-mail @(hasUnread ? "has-unread" : "")"
                       asp-controller="Messages" asp-action="Index">
                        <span class="nl-mail-icon" aria-hidden="true">
                            <!-- stängt kuvert -->
                            <svg class="icon-closed" width="18" height="18" viewBox="0 0 24 24" fill="none">
                                <path d="M4 7.5C4 6.12 5.12 5 6.5 5h11C18.88 5 20 6.12 20 7.5v9c0 1.38-1.12 2.5-2.5 2.5h-11C5.12 19 4 17.88 4 16.5v-9Z" stroke="currentColor" stroke-width="1.8" />
                                <path d="M5.2 7.2 12 12.1l6.8-4.9" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>

                            <!-- öppet kuvert -->
                            <svg class="icon-open" width="18" height="18" viewBox="0 0 24 24" fill="none">
                                <path d="M4.5 10.5 12 5l7.5 5.5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" />
                                <path d="M6.3 9.6h11.4c1.1 0 2 .9 2 2v6.2c0 1.1-.9 2-2 2H6.3c-1.1 0-2-.9-2-2v-6.2c0-1.1.9-2 2-2Z" stroke="currentColor" stroke-width="1.8" />
                                <path d="M6.2 12 12 15.7 17.8 12" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </span>

                        <span class="nl-mail-text">
                            @(hasUnread ? $"Du har {unreadCount} olästa meddelanden" : "Inga olästa meddelanden")
                        </span>
                    </a>
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
