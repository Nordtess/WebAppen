@{
    ViewData["Title"] = "Projekt";
    var projectId = (int?)(ViewData["ProjectId"] ?? 0) ?? 0;
}

<section style="max-width: 900px; margin: 24px auto; padding: 0 18px;">
    <div style="background: rgba(255,255,255,.96); border: 1px solid rgba(0,0,0,.16); border-radius: 24px; box-shadow: 0 20px 40px rgba(0,0,0,.08), 0 2px 6px rgba(0,0,0,.04); overflow: hidden;">
        <div style="padding: 18px; border-bottom: 1px solid rgba(0,0,0,.08); display:flex; align-items:center; justify-content:space-between; gap:12px;">
            <div style="font-weight: 950; letter-spacing: -0.02em;">Inspect Project</div>
            <a href="@Url.Action("Index", "MyCv")" style="text-decoration:none; font-weight:900; color: rgba(0,0,0,.72);">Tillbaka</a>
        </div>

        <div style="padding: 18px;">
            @switch (projectId)
            {
                case 1:
                    <h2 style="margin:0 0 8px; font-size: 18px;">NotLinkedIn — WebApp</h2>
                    <p style="margin:0; color: rgba(0,0,0,.72); line-height:1.6; font-weight:650;">
                        Placeholder-detaljer. Här kommer vi senare visa projektbeskrivning, screenshots, länkar och tech stack från SQL.
                    </p>
                    break;
                case 2:
                    <h2 style="margin:0 0 8px; font-size: 18px;">AES GUI — Kryptering</h2>
                    <p style="margin:0; color: rgba(0,0,0,.72); line-height:1.6; font-weight:650;">
                        Placeholder-detaljer. Senare hämtas data från backend (titel, beskrivning, repo-länk, etc.).
                    </p>
                    break;
                case 3:
                    <h2 style="margin:0 0 8px; font-size: 18px;">Linux & Nätverk — IPv6 / Wireshark</h2>
                    <p style="margin:0; color: rgba(0,0,0,.72); line-height:1.6; font-weight:650;">
                        Placeholder-detaljer. Här kan vi senare visa rapport/labb, lärdomar och relevanta filer.
                    </p>
                    break;
                case 4:
                    <h2 style="margin:0 0 8px; font-size: 18px;">Mini Dashboard — Frontend/Logik</h2>
                    <p style="margin:0; color: rgba(0,0,0,.72); line-height:1.6; font-weight:650;">
                        Placeholder-detaljer. Senare kopplar vi detta till SQL och renderar widgets/tech stack dynamiskt.
                    </p>
                    break;
                default:
                    <h2 style="margin:0 0 8px; font-size: 18px;">Projekt (placeholder)</h2>
                    <p style="margin:0; color: rgba(0,0,0,.72); line-height:1.6; font-weight:650;">
                        Ingen `ProjectId` skickades. Klicka på ett projekt i CV-vyn för att se placeholders per projekt.
                    </p>
                    break;
            }

            <div style="margin-top:14px; padding-top:14px; border-top: 1px solid rgba(0,0,0,.08); color: rgba(0,0,0,.60); font-weight:700; font-size: 13px;">
                Debug/placeholder: <span style="font-weight:900; color: rgba(0,0,0,.80);">ProjectId = @projectId</span>
            </div>
        </div>
    </div>
</section>
